<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frame220"
    android:background="#3E0AB4">

    <androidx.cardview.widget.CardView
        android:id="@+id/back4"
        android:layout_width="80dp"
        android:layout_height="45dp"

        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription=" "
                android:src="@drawable/vector_1">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textColor="#A8A8A8"
                android:layout_height="wrap_content"
                android:text="이전">

            </TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="end|center"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="34dp"
            android:id="@+id/alarm_icon"

            android:backgroundTint="@color/design_default_color_primary"
            android:background="@color/design_default_color_primary"
            android:src="@drawable/icons_clock"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="alarm"
            android:layout_height="34dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/inter_bold"
            android:text="59"
            android:textColor="@color/design_default_color_on_primary"
            android:textFontWeight="700"
            android:textSize="34dp">

        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text=" RF카드를 결제 단말기에 접촉해주세요"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:textFontWeight="600"
        app:fontWeight="700"
        tools:ignore="HardcodedText">

    </TextView>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/rf_card"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:textColor="#0A0758"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textFontWeight="600"
            app:fontWeight="700"
            tools:ignore="HardcodedText">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베이직"
                android:textColor="#0A0758"
                android:textFontWeight="600"
                android:layout_gravity="end"
                android:fontFamily="@font/inter_bold"
                android:textSize="25sp"
                app:fontWeight="700"
                tools:ignore="HardcodedText">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￦ 10,000원"
                android:textColor="#C80000"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="25sp"
                app:fontWeight="700"
                tools:ignore="HardcodedText">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>