<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frame219"
    android:background="#3E0AB4">

    <Toolbar
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="37dp"
        android:id="@+id/payment_option_tool_bar"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:baselineAligned="false"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/back3"
                    android:layout_width="68dp"
                    android:layout_height="42dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_marginRight="6.5dp"
                            android:contentDescription=" "
                            android:src="@drawable/vector_1"
                            android:layout_height="10dp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="이전"
                            android:textColor="#A8A8A8">

                        </TextView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="결제 방법을 선택해 주세요"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textSize="24sp"
                    android:textFontWeight="700"
                    app:fontWeight="700"
                    tools:ignore="HardcodedText">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/action"
                android:gravity="end|center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="34dp"
                    android:id="@+id/alarm_icon"

                    android:backgroundTint="@color/design_default_color_primary"
                    android:background="@color/design_default_color_primary"
                    android:src="@drawable/icons_clock"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="alarm"
                    android:layout_height="34dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="59"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textFontWeight="700"
                    android:textSize="34dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </Toolbar>

    <LinearLayout
        android:id="@+id/linearView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_option_tool_bar"
        app:layout_constraintVertical_bias="0.373">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="7dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/option1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="네이버페이"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="84dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/option2"
                            android:layout_marginBottom="10dp"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="카카오페이"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="94dp"
                            android:layout_height="40dp"
                            android:src="@drawable/option3"
                            android:layout_marginBottom="10dp"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="토스페이"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/option4"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="페이코"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="40dp"
                            android:contentDescription=" "
                            android:scaleType="fitXY"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/option5"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="제로페이"
                            android:textColor="#0A0758"
                            android:textSize="15sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="40dp"
                            android:contentDescription=" "
                            android:scaleType="fitXY"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/option6">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="스마일페이"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="31dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/apple_pay_mark_rgb_041619_1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_thin"
                            android:text="애플페이"
                            android:textColor="#0A0758"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:textColor="#0A0758"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textFontWeight="600"
            app:fontWeight="700"
            tools:ignore="HardcodedText">

        </TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="베이직"
                android:textColor="#0A0758"
                android:textSize="25sp"
                android:textFontWeight="600"
                app:fontWeight="700"
                tools:ignore="HardcodedText">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="￦ 10,000원"
                android:textColor="#C80000"
                android:textSize="25sp"
                android:textFontWeight="600"
                app:fontWeight="700"
                tools:ignore="HardcodedText">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>