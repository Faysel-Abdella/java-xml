<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:background="@color/design_default_color_primary_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LevelScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:weightSum="3"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/header2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/back1"
                android:layout_width="80dp"
                android:layout_height="45dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:src="@drawable/back"
                        android:layout_height="10dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="이전"
                        android:textFontWeight="700"
                        android:textSize="16sp">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="결제 방법을 선택해 주세요"
                android:textColor="@color/design_default_color_on_primary"
                android:textFontWeight="700"
                android:textSize="24sp"
                tools:ignore="NestedWeights">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/action"
            android:gravity="end|center"
            android:weightSum="5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:id="@+id/alarm_icon"

                android:backgroundTint="@color/design_default_color_primary"
                android:background="@color/design_default_color_primary"
                android:src="@drawable/icons_clock"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="alarm"
                android:layout_height="34dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="59"
                android:textColor="@color/design_default_color_on_primary"
                android:textFontWeight="700"
                android:textSize="34dp">

            </TextView>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="112dp"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <RelativeLayout
                        android:id="@+id/click_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="현금"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="50dp"
                            android:src="@drawable/p1">

                        </ImageView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="112dp"
                    android:layout_gravity="start"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <RelativeLayout

                        android:id="@+id/click_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="RF카드 \n(세차카드)"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="50dp"
                            android:contentDescription=" "
                            android:src="@drawable/p3">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <RelativeLayout
                        android:id="@+id/click_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="신용카드"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="50dp"
                            android:src="@drawable/p2">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E8E8E8">

                    <LinearLayout
                        android:id="@+id/click_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="간편 결제"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="end|center_vertical"
                            android:layout_alignParentEnd="true"

                            android:src="@drawable/p4">

                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:background="#F2F0FE"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:textColor="#0A0758"
            android:textFontWeight="700"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="베이직"
                android:textColor="#0A0758"
                android:layout_gravity="end"

                android:textFontWeight="600"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="￦ 10,000원"
                android:textColor="#C80000"
                android:textFontWeight="700"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>